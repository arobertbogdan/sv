<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <tbody>
  <% @posts.each do |post| %>
      <tr>
        <td>
          <a class="up_vote" post-id=<%= post.id %>>+</a>
          <%= post.rating %>
          <a class="down_vote" post-id=<%= post.id %>>-</a>
        </td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.description %></td>
        <td><%= post.media %></td>
        <td>submited <span><%= post.old %></span> ago</td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>