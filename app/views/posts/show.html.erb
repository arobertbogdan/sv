<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Media:</strong>
  <a><%= @post.media %></a>
</p>

<td><%= link_to @post.count_comments, @post %></td>

<%= render partial: "comments/form"%>
<%= render partial: "comments/comment", collection: @comments %>

<script>
    $(document).ready(function(){
        $('.reply').click(function (event) {
            var parent = $(event.target).parent();
            parent.append("<%= escape_javascript(render partial: "comments/reply") %>");
            parent.find("div.field").append('<input type="hidden" id="parent" name="parent_id" value="'+ this.id +'">');
        });
    });
</script>
